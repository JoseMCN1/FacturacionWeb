@{
    ViewData["Title"] = "POS";
}
<h1>@ViewData["Title"]</h1>
<div class="container mt-5">
    <div class="row">
        <div class="col-md-2 mb-3">
            <input type="text" class="form-control" id="codigo" placeholder="Código" oninput="delayedAjaxCall()">
        </div>
        <div class="col-md-3 mb-3">
            <input type="text" class="form-control" id="nombre" placeholder="Nombre" readonly>
        </div>
        <div class="col-md-2 mb-3">
            <input type="text" class="form-control" id="cantidad" placeholder="Cantidad" oninput="checkToAddArticle()">
        </div>
        <div class="col-md-2">
            <button id="btnAgregarArticulo" class="btn btn-primary" disabled>Agregar</button>
        </div>
    </div>

    <table class="table">
        <thead>
            <tr>
                <th>Codigo</th>
                <th>Nombre</th>
                <th>Precio</th>
                <th>Iva</th>
                <th>Cantidad</th>
                <th>Total</th>
            </tr>
        </thead>
        <tbody id="myTableBodyFacturacion">

        </tbody>
    </table>

    <div class="row">
            <button  id="btnImprimir" class="btn btn-success">Imprimir</button>
        </div>

        <div class="modal fade" id="modalFactura" tabindex="-1" aria-labelledby="modalFactura" aria-hidden="true">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="modalFacturaLabel">Detalles de Factura</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                        <div class="table-responsive">
                            <table class="table">
                                <thead>
                                    <tr>
                                        <th>Codigo</th>
                                        <th>Cantidad</th>
                                        <th>Precio Unitario</th>
                                        <th>Aplica IVA</th>
                                        <th>Monto Total Artículo</th>
                                    </tr>
                                </thead>
                                <tbody id="articulosTableBody"></tbody>
                            </table>
                        </div>
                        <div class="mt-3">
                            <label for="consecutivo" class="form-label">Consecutivo:</label>
                            <span id="consecutivo"></span>
                        </div>
                        <div class="mt-3">
                            <label for="numeroFactura" class="form-label">Número de Factura:</label>
                            <span id="numeroFactura"></span>
                        </div>
                        <div class="mt-3">
                            <label for="fechaCreacion" class="form-label">Fecha de Creación:</label>
                            <span id="fechaCreacion"></span>
                        </div>
                        <div class="mt-3">
                            <label for="subtotal" class="form-label">Subtotal:</label>
                            <span id="subtotal"></span>
                        </div>
                        <div class="mt-3">
                            <label for="montoTotal" class="form-label">Monto Total:</label>
                            <span id="montoTotal"></span>
                        </div>
                    </div>
                </div>
            </div>
        </div>

</div>
